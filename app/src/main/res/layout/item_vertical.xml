<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="10"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:padding="@dimen/_5sdp">
    <FrameLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_vertical_item_img"
            android:scaleType="fitXY"
            android:src="@drawable/anh"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/video_icon"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_vertical_item_title"
            android:layout_gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:text="Thanh tra dao  sat hach,bang cap o to 13 tinh thanh Thanh tra dao  sat hach,bang cap o to 13 tinh thanh "
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/tv_vertical_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="33 phut truoc"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>